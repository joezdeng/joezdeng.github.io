* {
	margin:0;
	padding:0;
	/*border:1px dashed #000000;*/
}

@media screen and (min-width:70em) {
	#pageWrap {
		width:60%;
	}

	h1 {
		display:inline-block;
	}

	nav {
		display:inline-block;
	}

}

@media screen and (max-width:70em) {
	#pageWrap {
		width:80%;
	}

	h1 {
		display:inline-block;
	}

	nav {
		display:inline-block;
	}

}

@media screen and (max-width:55em) {
	#pageWrap {
		width:100%;
	}

	h1 {
		display:block;
		text-align:center;
	}

	nav {
		display:block;
		text-align:center;
	}

}

body {
	font-size:1em;
	font-family:"Gill Sans MT"; Calibri, sans-serif;

}

#pageWrap {
	margin-left:auto;
	margin-right:auto;
	min-width:310px;
}

header {
	width:100%;
	margin-top:2%;
	margin-bottom:5%;
	text-transform:lowercase;
}

h1 {
	font-family:"Palatino Linotype", "Book Antiqua", Palatino, serif;
	font-size:3em;
}

#socialMedia {
	float:right;
}

header #socialMedia img {
	height:2em;
	width:auto;
	display:inline;
}

header #socialMedia img:hover{
	opacity:0.5;
	filter:alpha(opacity=50); /* For IE8 and earlier */
}

nav ul {
	list-style-type:none;
	/*position:absolute;
	bottom:13%;
	right:0%;*/
}

nav ul li {
	display:inline;
	padding:0 0.5em;
	font-size:1.1em;
}	

nav ul a:link {
	text-decoration:none;
	color:#000000;
}

nav ul a:visited {
	text-decoration:none;
	color:#000000;
}

nav ul a:hover {
	border-bottom:2px solid #e04006;
}

nav ul a:active {
	/*border-bottom:2px solid #e04006;*/
	color:#e04006;
}

#clear {
	clear:both;
	margin-bottom:2em;
}

sidebar {
	width:15%;
	background:#e04006;
	float:right;
}

#profPic {
	height:90%;
	width:90%;
	display:block;
	margin-left:auto;
	margin-right:auto;
	margin-top:5%;
	margin-bottom:5%;
}

#tagline {
	margin:0.5em;
	color:#ffffff;
}

section {
	width:80%;
	background:#d8d8bf;
}

article {
	padding:1%;
}